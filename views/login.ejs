<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - Bboard</title>
  <link rel="stylesheet" href="/css/login.css">
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=IBM+Plex+Condensed:wght@400;500;600;700&display=swap"
    rel="stylesheet">

  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" rel="stylesheet" />
</head>

<body class="page-wrapper">
  <main class="login-container animate-scale" style="animation-delay: 0.2s">

    <!-- Header -->
    <header class="login-header text-center">
      <img class="login-logo" src="/images/logo.png" width="150px" alt="Logo">
    </header>

    <!-- Orbit Component -->
    <section class="orbit-wrapper">
      <div class="orbit">
        <div class="orbit-circle orbit-large animate-scale" style="animation-delay: 0.8s"></div>
        <div class="orbit-circle orbit-medium animate-scale" style="animation-delay: 0.9s"></div>
        <div class="orbit-circle orbit-small animate-scale" style="animation-delay: 1s"></div>

        <!-- Main Button -->
        <div class="orbit-main-btn animate-scale pulse" style="animation-delay: 1.1s">
          <img src="/images/login-minilogo.png" width="46px" alt="Logo login">
        </div>

        <!-- Orbital Elements (E-commerce Related SVGs) -->
        <div class="orbital-element" id="orbital-1" style="animation: orbit 20s linear infinite; animation-delay: -0s;">
          <div class="orbital-item">
            <span class="material-symbols-rounded">shopping_bag</span>
          </div>
        </div>
        <div class="orbital-element" id="orbital-2" style="animation: orbit 20s linear infinite; animation-delay: -4s;">
          <div class="orbital-item">
            <span class="material-symbols-rounded">storefront</span>
          </div>
        </div>
        <div class="orbital-element" id="orbital-3" style="animation: orbit 20s linear infinite; animation-delay: -8s;">
          <div class="orbital-item">
            <span class="material-symbols-rounded">calendar_month</span>
          </div>
        </div>
        <div class="orbital-element" id="orbital-4"
          style="animation: orbit 20s linear infinite; animation-delay: -12s;">
          <div class="orbital-item">
            <span class="material-symbols-rounded">chat_bubble</span>
          </div>
        </div>
        <div class="orbital-element" id="orbital-5"
          style="animation: orbit 20s linear infinite; animation-delay: -16s;">
          <div class="orbital-item">
            <span class="material-symbols-rounded">person</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Form -->
    <form class="login-form" action="/" method="POST">
      <div class="form-group animate-scale" style="animation-delay: 1.2s">
        <label for="username">Usuario</label>
        <input type="text" id="username" name="username" placeholder="Tu usuario" required>
      </div>

      <div class="form-group animate-scale" style="animation-delay: 1.3s">
        <label for="password">Contraseña</label>
        <input type="password" id="password" name="password" placeholder="••••••••" required>
      </div>

      <div class="form-options animate-scale" style="animation-delay: 1.4s">
        <div class="remember-me">
          <input id="remember" name="remember" type="checkbox">
          <label for="remember">Recuerdame</label>
        </div>
        <a href="/reset-password" class="forgot-password">Olvidaste la contraseña?</a>
      </div>

      <div class="form-submit animate-scale" style="animation-delay: 1.5s">
        <button type="submit">INGRESAR</button>
      </div>
    </form>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(() => {
        document.querySelectorAll('.orbital-element').forEach(el => el.style.opacity = '1');
      }, 1500);
    });
  </script>
</body>

</html>